{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "lib": [
      "es6",
      "es2016.array.include"
    ],
    "noImplicitAny": true,
    "removeComments": false,
    "moduleResolution": "node",
    "preserveConstEnums": true,
    "sourceMap": true,
    "jsx": "react",
    "module": "commonjs",
    "target": "es6",
    "declaration": true,
    "pretty": true,
    "strict": true,
    "alwaysStrict": true,
    "downlevelIteration": true,
    "experimentalDecorators": true,
    "resolveJsonModule": true,
    "baseUrl": "",
    "paths": {
      "@server": [
        "../backend/src/server"
      ],
      "@shared": [
        "../backend/src/shared"
      ]
    }
  },
  "exclude": [
    "node_modules",
    "web",
    "server",
    "common",
    "worker",
    "processes"
  ]
}
